@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MyWikiPage</h1>
    <p>A simple markdown-to-HTML wiki generator built with ASP.NET Core Razor Pages.</p>
    
    <div class="mt-4">
        <a class="btn btn-primary btn-lg" asp-page="/Wiki" role="button">
            Go to Wiki
        </a>
    </div>
    
    <div class="mt-3">
        <p class="text-muted">
            Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
        </p>
    </div>
</div>
