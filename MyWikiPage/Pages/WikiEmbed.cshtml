@page "/wiki-embed"
@model WikiEmbedModel
@{
    Layout = null; // No layout for iframe embedding
}

<!DOCTYPE html>
<html lang="en" data-theme="@Model.Theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.PageTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            font-size: 0.9rem;
            padding: 1rem;
        }
    </style>
</head>
<body>
    @if (Model.HasContent)
    {
        <div class="wiki-embed-nav">
            <span class="me-auto">
                <i class="bi bi-journal-text"></i> @Model.PageTitle
            </span>
            @if (!string.IsNullOrEmpty(Model.DefaultPageUrl))
            {
                <a href="@Model.DefaultPageUrl" target="_blank" title="Open in new tab">
                    <i class="bi bi-arrow-up-right-square"></i>
                </a>
            }
            <a href="/Wiki" target="_blank" title="Manage Wiki">
                <i class="bi bi-gear"></i>
            </a>
        </div>
        
        <div class="wiki-embed-content">
            @Html.Raw(Model.Content)
        </div>
    }
    else
    {
        <div class="no-content">
            <i class="bi bi-file-earmark-text fs-1 mb-3"></i>
            <h6>No Wiki Content</h6>
            <p>No wiki pages have been generated yet.</p>
            <a href="/Wiki" target="_blank" class="btn btn-primary btn-sm">
                <i class="bi bi-gear"></i> Generate Content
            </a>
        </div>
    }
    
    <script>
        // Sync theme with parent window
        function syncThemeWithParent() {
            try {
                const parentTheme = window.parent.document.documentElement.getAttribute('data-theme') || 'light';
                document.documentElement.setAttribute('data-theme', parentTheme);
            } catch (e) {
                // Cross-origin restriction or no parent, use default
                document.documentElement.setAttribute('data-theme', 'light');
            }
        }
        
        // Initial sync
        syncThemeWithParent();
        
        // Listen for theme changes in parent
        window.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'theme-change') {
                document.documentElement.setAttribute('data-theme', event.data.theme);
            }
        });
    </script>
</body>
</html>