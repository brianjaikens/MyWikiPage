@page "/wiki-embed"
@model WikiEmbedModel
@{
    Layout = null; // No layout for iframe embedding
}

<!DOCTYPE html>
<html lang="en" data-theme="@Model.Theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.PageTitle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            font-size: 0.9rem;
            padding: 1rem;
        }
        
        .wiki-embed-nav {
            background-color: var(--bs-secondary-bg);
            border: 1px solid var(--bs-border-color);
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            margin-bottom: 1rem;
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
        }
        
        .wiki-embed-nav a {
            color: var(--bs-body-color);
            text-decoration: none;
            font-size: 0.875rem;
        }
        
        .wiki-embed-nav a:hover {
            text-decoration: underline;
        }
        
        .wiki-embed-content {
            line-height: 1.5;
        }
        
        .wiki-embed-content h1:first-child {
            margin-top: 0;
            font-size: 1.5rem;
        }
        
        .wiki-embed-content h2 {
            font-size: 1.25rem;
        }
        
        .wiki-embed-content h3 {
            font-size: 1.1rem;
        }
        
        .wiki-embed-content p {
            margin-bottom: 0.75rem;
        }
        
        .wiki-embed-content ul, .wiki-embed-content ol {
            margin-bottom: 0.75rem;
        }
        
        .wiki-embed-content pre {
            font-size: 0.8rem;
            margin-bottom: 0.75rem;
        }
        
        .wiki-embed-content code {
            font-size: 0.8rem;
        }
        
        .no-content {
            text-align: center;
            padding: 2rem;
            color: var(--bs-secondary-color);
        }
    </style>
</head>
<body>
    @if (Model.HasContent)
    {
        <div class="wiki-embed-nav">
            <span class="me-auto">
                <i class="bi bi-journal-text"></i> @Model.PageTitle
            </span>
            @if (!string.IsNullOrEmpty(Model.DefaultPageUrl))
            {
                <a href="@Model.DefaultPageUrl" target="_blank" title="Open in new tab">
                    <i class="bi bi-arrow-up-right-square"></i>
                </a>
            }
            <a href="/Wiki" target="_blank" title="Manage Wiki">
                <i class="bi bi-gear"></i>
            </a>
        </div>
        
        <div class="wiki-embed-content">
            @Html.Raw(Model.Content)
        </div>
    }
    else
    {
        <div class="no-content">
            <i class="bi bi-file-earmark-text fs-1 mb-3"></i>
            <h6>No Wiki Content</h6>
            <p>No wiki pages have been generated yet.</p>
            <a href="/Wiki" target="_blank" class="btn btn-primary btn-sm">
                <i class="bi bi-gear"></i> Generate Content
            </a>
        </div>
    }
    
    <script>
        // Sync theme with parent window
        function syncThemeWithParent() {
            try {
                const parentTheme = window.parent.document.documentElement.getAttribute('data-theme') || 'light';
                document.documentElement.setAttribute('data-theme', parentTheme);
            } catch (e) {
                // Cross-origin restriction or no parent, use default
                document.documentElement.setAttribute('data-theme', 'light');
            }
        }
        
        // Initial sync
        syncThemeWithParent();
        
        // Listen for theme changes in parent
        window.addEventListener('message', function(event) {
            if (event.data && event.data.type === 'theme-change') {
                document.documentElement.setAttribute('data-theme', event.data.theme);
            }
        });
    </script>
</body>
</html>